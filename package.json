{
  "name": "truth-cli",
  "version": "0.1.3",
  "description": "A command-line tool for analyzing dependencies under node_moudles",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "truth-cli": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cd packages/web && pnpm run dev",
    "dev:cli": "ts-node --esm /dist/bundle.es.js",
    "build:web": "cd packages/web && pnpm run build --emptyOutDir",
    "build:cli": "ts-node --esm scripts/build-cli.ts --es",
    "ci:publish": "pnpm publish -r",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lilming123/dep_cli.git"
  },
  "keywords": [
    "node_moudles",
    "cli",
    "node"
  ],
  "author": "lilming",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lilming123/dep_cil/issues"
  },
  "homepage": "https://github.com/lilming123/dep_cil#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "local-pkg": "^0.4.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/express": "^4.17.17",
    "@types/minimist": "^1.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "minimist": "^1.2.8",
    "ora": "^6.3.1",
    "prettier": "^3.0.0",
    "rollup": "^3.26.3",
    "rollup-plugin-node-externals": "^6.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  }
}
